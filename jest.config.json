{
  "roots": "['<rootDir>/src']",
  "testMatch": "['**/__tests__/**/*.+(ts|tsx|js)',
    '**/?(*.)+(spec|test).+(ts|tsx|js)',
  ]",
  "transformIgnorePatterns": "[
    '[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|cjs|ts|tsx)$',
  ]",
  "collectCoverageFrom": "['src/**/*.js', '!**/node_modules/**']",
  "testEnvironment": "jsdom",
  "moduleDirectories": "['node_modules', 'src']",

  "moduleNameMapper": "{
    '@/(.*)': '<rootDir>/src/$1',
  }",
};
